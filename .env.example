# GhostWriter Configuration Template
# Copy this file to .env and fill in your actual values

# General Settings
DEBUG=false
LOG_LEVEL=INFO

# TextBee SMS Configuration (Required for SMS integration)
TEXTBEE_API_KEY=your_textbee_api_key_here
TEXTBEE_DEVICE_ID=your_textbee_device_id_here

# SMS Settings
SMS__ENABLED=true
SMS__POLLING_INTERVAL=10

# Slack Configuration (Optional)
SLACK__ENABLED=false
SLACK__BOT_TOKEN=xoxb-your-bot-token-here
SLACK__APP_TOKEN=xapp-your-app-token-here

# Discord OAuth Configuration (Optional)
DISCORD__ENABLED=false
DISCORD__CLIENT_ID=your_discord_client_id_here
DISCORD__CLIENT_SECRET=your_discord_client_secret_here
DISCORD__REDIRECT_URI=http://localhost:8080/callback
DISCORD__DB_PATH=ghostwriter.db
DISCORD__ENCRYPTION_KEY=your_base64_encryption_key_here
DISCORD__API_BASE_URL=https://discord.com/api/v10
DISCORD__MAX_MESSAGES_PER_CHANNEL=100

# Gmail Configuration (Optional)
GMAIL__ENABLED=false
GMAIL__CREDENTIALS_PATH=path/to/credentials.json
GMAIL__TOKEN_PATH=path/to/token.json

# Processing Settings
PROCESSING__BATCH_SIZE=10
PROCESSING__PROCESSING_INTERVAL=5
PROCESSING__MAX_RETRIES=3
